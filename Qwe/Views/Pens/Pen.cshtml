@{
    ViewBag.Title = "Магазин";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа штанов</h3>
        <table width="100%" cellspacing="0" cellpadding="4">
            <tr>
                <td><p>Пол </p></td>
                <td><p>Название </p></td>
                <td><p>Размер </p></td>
                <td><p>Цена </p></td>
                <td></td>
            </tr>
            @foreach (var a in ViewBag.Penses)
            {
                <tr>
                    <td><p>@a.Sex</p></td>
                    <td><p>@a.Name</p></td>
                    <td><p>@a.Size</p></td>
                    <td><p>@a.Price</p></td>
                    <td><p><a href="/Pens/Buyp/@a.Id">Купить</a></p></td>
                    <td><p><a href="/Pens/Editp/@a.Id">Редактировать</a></p></td>
                </tr>
            }
        </table>

        <form action="/Pens/Addp">
            <button type="submit">Добавить запись</button>
        </form>
    </div>
</body>
</html>